{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "${title}"
        },
        {
            "type": "TextBlock",
            "text": "${text}",
            "wrap": true
        },
        {
            "type": "FactSet",
            "facts": [
                {
                    "title": "Most active user:",
                    "value": "${userMostActive}"
                },
                {
                    "title": "Least active user:",
                    "value": "${userLeastActive}"
                },
                {
                    "title": "Most active channel:",
                    "value": "${channelMostActive}"
                },
                {
                    "title": "Total message count:",
                    "value": "${msgCount}"
                },
                {
                    "title": "User count:",
                    "value": "${userCount}"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6"
}